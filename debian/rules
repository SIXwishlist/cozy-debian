#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#DH_VERBOSE = 1

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


# main packaging script based on dh7 syntax
%:
	dh $@ 

# debmake generated override targets
# This is example for Cmake (See http://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- \
#	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)


override_dh_auto_install:
	dh_auto_install
	mkdir -p $(CURDIR)/debian/cozy-depends/usr/share/cozy
	cp -f $(CURDIR)/nginx-config $(CURDIR)/debian/cozy-depends/usr/share/cozy
	cp -f $(CURDIR)/apache-config $(CURDIR)/debian/cozy-depends/usr/share/cozy
	cp -f $(CURDIR)/supervisor-cozy-controller $(CURDIR)/debian/cozy-depends/usr/share/cozy
	# cozy-app-self-hosting part
	mkdir -p $(CURDIR)/debian/cozy-app-self-hosting/usr/share/cozy
	mkdir -p $(CURDIR)/debian/cozy-app-self-hosting/etc/sudoers.d
	cp -f $(CURDIR)/debian-reconfigure-cozy-domain.sh $(CURDIR)/debian/cozy-app-self-hosting/usr/share/cozy
	cp -f $(CURDIR)/sudoers.d_cozy-self-hosting $(CURDIR)/debian/cozy-app-self-hosting/etc/sudoers.d/cozy-self-hosting
	chown root:root $(CURDIR)/debian/cozy-app-self-hosting/etc/sudoers.d/cozy-self-hosting
	chmod 440 $(CURDIR)/debian/cozy-app-self-hosting/etc/sudoers.d/cozy-self-hosting
