#!/bin/bash
# postrm script for cozy
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
SUPERVISORD_RELOAD=

case "$1" in
	purge|abort-install)
		[ -d /etc/cozy ] && echo "Delete /etc/cozy directory" && rm -rf /etc/cozy
		;;

	remove|purge|abort-install)
		npm uninstall -g cozy-controller cozy-monitor
		for user in cozy cozy-data-system cozy-home; do
			echo "Remove user $user"
			id $user >/dev/null 2>&1 && userdel $user
		done
		[ -d /usr/local/cozy ] && rm -rf /usr/local/cozy
		for file in /etc/supervisor/conf.d/cozy-indexer.conf /etc/supervisor/conf.d/cozy-controller.conf; do
			if [ -f $file ]; then
				echo "Remove $file"
				rm $file
				SUPERVISORD_RELOAD=1
			fi
		done
		[[ $SUPERVISORD_RELOAD ]] && echo "Reload supervisord" && supervisorctl reload
		if [ -f /etc/nginx/conf.d/cozy.conf ]; then
			echo "Remove etc/nginx/conf.d/cozy.conf and restart Nginx"
			rm /etc/nginx/conf.d/cozy.conf
			service nginx reload
		fi
		if [ -f /etc/apache2/sites-enabled/cozy.conf ]; then
			echo "Remove /etc/apache2/sites-enabled/cozy.conf and restart Apache"
			rm /etc/apache2/sites-enabled/cozy.conf
			apachectl configtest && apachectl restart
		fi
		if [ -f /etc/apache2/sites-available/cozy.conf ]; then
			echo "Remove /etc/apache2/sites-available/cozy.conf"
			rm /etc/apache2/sites-available/cozy.conf
		fi
		;;

	upgrade|failed-upgrade|abort-upgrade|disappear)
		;;

	*)
		echo "postrm called with unknown argument \`$1'" >&2
		exit 1
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
